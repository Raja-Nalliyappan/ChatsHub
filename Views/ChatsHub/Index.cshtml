@model List<ChatsHub.Models.Users>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

@section Scripts {
    <script src="~/js/Messages.js"></script>
}

<!-- TOP HEADER -->
<nav class="navbar px-3">
    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-grid-3x3-gap-fill fs-5"></i>
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-people-fill text-primary fs-4"></i>
            <span class="fw-bold">ChatsHub</span>
        </div>
    </div>

    <div class="position-relative w-50 d-none d-md-block">
        <input type="text"
               id="searchInput"
               class="form-control search-input"
               placeholder="Search...">
        <div id="searchResults" class="position-absolute bg-white border w-100" style="z-index: 1000;"></div>
    </div>

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-three-dots fs-5"></i>
        <div class="dropdown">
            <img src="https://i.pravatar.cc/40"
                 class="rounded-circle dropdown-toggle avatar-img"
                 data-bs-toggle="dropdown">

            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li class="px-3 py-2">
                    <strong>Raja N</strong><br />
                    <small class="text-muted">raja@company.com</small>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item"><i class="bi bi-person me-2"></i> Profile</a></li>
                <li><a class="dropdown-item text-danger" onclick="logout()"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- MAIN CONTENT -->
<div class="d-flex main-wrapper">

    <!-- APP BAR -->
    <div class="app-bar d-flex flex-column align-items-center pt-3">
        <i class="bi bi-chat-dots fs-4 mb-4 text-primary"></i>
    </div>

    <!-- CHAT LIST -->
    <div class="chat-list p-3" id="chatList">
        <strong>Chat</strong>
    </div>

    <!-- CHAT AREA -->
    <div class="chat-area flex-fill d-flex flex-column">

        <!-- HEADER -->
        <div class="border-bottom p-3 d-flex justify-content-between align-items-center" id="chatHeader">
            <div id="chatHeaderUser">
                <strong>BX Handover status</strong><br>
                <small class="text-muted">Chat</small>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-camera-video"></i>
                <i class="bi bi-telephone"></i>
                <i class="bi bi-info-circle"></i>
            </div>
        </div>

        <!-- MESSAGES CONTAINER -->
        <div id="messagesContainer" class="messages flex-fill overflow-auto p-3">
            <!-- messages load dynamically here -->
        </div>

        <!-- CHAT INPUT -->
        <div class="chat-input d-flex align-items-center gap-2 p-2 border-top">
            <input type="text" id="messageInput" class="form-control shadow-none bg-light" placeholder="Type a message">
            <i class="bi bi-paperclip fs-5"></i>
            <i class="bi bi-emoji-smile fs-5"></i>
            <button id="sendBtn" class="btn btn-primary"><i class="bi bi-send"></i></button>
        </div>
    </div>

    <!-- USER INFO PANEL -->
    <div class="info-panel">
        <h6>ChatsHub - User List</h6>
        @foreach (var user in Model)
        {
            <strong class="user-item" data-user-id="@user.Id" data-user-name="@user.Name">@user.Name</strong>
        
            <br />
        }
    </div>

</div>
