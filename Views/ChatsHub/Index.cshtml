@model List<ChatsHub.Models.Users>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<!-- Hidden fields for SignalR JS -->
<input type="hidden" id="currentUserId" value="@Context.Session.GetInt32("UserId")" />
<input type="hidden" id="currentUserName" value="@ViewBag.UserName" />

<!-- TOP HEADER -->
<nav class="navbar px-3">
    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-grid-3x3-gap-fill fs-5"></i>
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-people-fill text-primary fs-4"></i>
            <span class="fw-bold">ChatsHub</span>
        </div>
    </div>

    <div class="position-relative w-50 d-none d-md-flex">
        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3"></i>
        <input type="text"
               id="searchInput"
               class="form-control search-input"
               placeholder="Search...">
        <div id="searchResults"
             class="position-absolute bg-white border w-100"
             style="top:110%; left:0; z-index:1000;"></div>
    </div>

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-three-dots fs-5"></i>
        <div class="dropdown">
            <img src="https://i.pravatar.cc/40"
                 class="rounded-circle dropdown-toggle avatar-img"
                 data-bs-toggle="dropdown">

            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li class="px-3 py-2">
                    <strong>@ViewBag.UserName</strong><br />
                    <small class="text-muted">@ViewBag.UserEmail</small>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item"><i class="bi bi-person me-2"></i> Profile</a></li>
                <li>
                    <a class="dropdown-item text-danger" onclick="logout()">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- MAIN CONTENT -->
<div class="d-flex main-wrapper">

    <!-- APP BAR -->
    <div class="app-bar d-flex flex-column align-items-center pt-3">
        <i class="bi bi-chat-dots fs-4 mb-4 text-primary"></i>
    </div>

    <!-- CHAT LIST -->
    <div class="chat-list p-3" id="chatList">
        <strong>Chats</strong>
    </div>

    <!-- CHAT AREA -->
    <div class="chat-area flex-fill d-flex flex-column">

        <!-- HEADER -->
        <div class="border-bottom p-3 d-flex justify-content-between align-items-center" id="chatHeader">
            <div id="chatHeaderUser">
                <strong>Select a user</strong><br>
                <small class="text-muted">Chat</small>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-camera-video"></i>
                <i class="bi bi-telephone"></i>
                <i class="bi bi-info-circle"></i>
            </div>
        </div>

        <!-- MESSAGES CONTAINER -->
        <div id="messagesContainer" class="messages flex-fill overflow-auto p-3">
            <!-- Messages load dynamically -->
        </div>

        <!-- CHAT INPUT -->
        <div class="chat-input d-flex align-items-center gap-2 p-2 border-top">
            <input type="text" id="messageInput" class="form-control shadow-none bg-light" placeholder="Type a message">
            <i class="bi bi-paperclip fs-5"></i>
            <i class="bi bi-emoji-smile fs-5"></i>
            <button id="sendBtn" class="btn btn-primary">
                <i class="bi bi-send"></i>
            </button>
        </div>
    </div>

    <!-- USER INFO PANEL -->
    <div class="info-panel p-2">
        <h6>ChatsHub - User List</h6>

        @foreach (var user in Model)
        {
            <div class="user-item mt-2 p-1"
                 data-user-id="@user.Id"
                 data-user-name="@user.Name"
                 style="cursor:pointer;">
                <strong>@user.Name</strong>
            </div>
        }
    </div>

</div>

@section Scripts {

    <!-- SignalR Library (IMPORTANT) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <!-- Chat JS (SignalR + AJAX) -->
    <script src="~/js/Messages.js"></script>

    <!-- Other JS -->
    <script src="~/js/Common.js"></script>
    <script src="~/js/Login.js"></script>
}
