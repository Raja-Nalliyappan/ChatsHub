@model List<ChatsHub.Models.Users>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
    <link rel="stylesheet" href="~/css/Common.css" />
}

<!-- Hidden fields for SignalR JS -->
<input type="hidden" id="currentUserId" value="@Context.Session.GetInt32("UserId")" />
<input type="hidden" id="currentUserName" value="@ViewBag.UserName" />

<!-- TOP HEADER -->
<nav class="navbar px-3">
    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-grid-3x3-gap-fill fs-5"></i>
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-people-fill text-primary fs-4"></i>
            <span class="fw-bold">ChatsHub</span>
        </div>
    </div>

    <div class="position-relative w-50 d-none d-md-flex">
        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3"></i>
        <input type="text"
               id="searchInput"
               class="form-control search-input"
               placeholder="Search...">
        <div id="searchResults"
             class="position-absolute bg-white border w-100"
             style="top:110%; left:0; z-index:1000;"></div>
    </div>

    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-three-dots fs-5"></i>
        <div class="dropdown">
            <div id="navbarAvatar"
                 class="dropdown-toggle d-flex justify-content-center align-items-center"
                 style="width: 40px; height: 40px; border-radius: 50%; background-color: #007bff; color: #fff; font-weight: bold; cursor: pointer;"
                 data-bs-toggle="dropdown">
                <span id="navbarAvatarInitial">@ViewBag.UserName?.Substring(0, 1).ToUpper()</span>
            </div>


            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li class="px-3 py-2">
                    <strong>@ViewBag.UserName</strong><br />
                    <small class="text-muted">@ViewBag.UserEmail</small>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item"><i class="bi bi-person me-2"></i> Profile</a></li>
                <li>
                    <a class="dropdown-item text-danger" onclick="logout()">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- MAIN CONTENT -->
<div class="d-flex main-wrapper">

    <!-- APP BAR -->
    <div class="app-bar d-flex flex-column align-items-center pt-3">
        <img src="https://img.icons8.com/?size=100&id=aIYDmrSk6X13&format=png&color=000000" alt="ChatText" width="35" height="35" class="mt-2" />
    </div>

    <!-- CHAT LIST -->
    <div class="chat-list p-3" id="chatList">
        <strong>Chats</strong>
    </div>

    <!-- CHAT AREA -->
    <div class="chat-area flex-fill d-flex flex-column">

        <!-- HEADER -->
        <div class="border-bottom p-3 d-flex justify-content-between align-items-center" id="chatHeader">
            <div id="chatHeaderUser">
                <strong>Select a user</strong><br>
                <small class="text-muted">Chat</small>
            </div>
            <div class="d-flex align-items-center gap-3">
                @* <i class="bi bi-camera-video"></i> *@
                @* <i class="bi bi-telephone"></i> *@
                <i class="bi bi-info-circle"></i>
            </div>
        </div>

        <!-- MESSAGES CONTAINER -->
        <div id="messagesContainer" class="messages flex-fill overflow-auto p-3">
            <!-- Messages load dynamically -->
        </div>

        
        
        <!-- CHAT INPUT -->
        <div class="chat-input p-2 border-top d-flex flex-column gap-2">

            <div id="imagePreview" class="image-preview"></div>

            <!-- Input row -->
            <div class="input-row">
                <input type="text"
                       id="messageInput"
                       class="form-control shadow-none bg-light"
                       placeholder="Type your message, paste a screenshot, or upload an image…">

                <input type="file" id="imageInput" accept="image/*" hidden>

                <button class="btn btn-light"
                        onclick="document.getElementById('imageInput').click()">
                    <i class="bi bi-paperclip"></i>
                </button>

                <button id="sendBtn" class="btn btn-primary">
                    <i class="bi bi-send"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- USER INFO PANEL - ChatHub Info -->
    <div id="userInfoPanel" style="width: 260px; min-width: 260px; padding: 20px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); text-align: center;">
        <p class="fw-bold">ChatsHub User Profile Information</p>
        <!-- Selected User Info -->
        <div id="selectedUserInfo" class="d-none">
            <!-- Letter Avatar -->
            <div id="infoAvatar"
                 style="width: 80px; height: 80px; line-height: 80px; border-radius: 50%; background-color: #007bff; color: #fff; font-size: 2rem; margin: 0 auto 15px; font-weight: bold;">
                <span id="avatarInitial">?</span>
            </div>

            <!-- User Name -->
            <div id="infoUserName" style="font-weight: bold; font-size: 1.1rem; margin-bottom: 5px;">
                <span id="defaultName">No Name</span>
            </div>

            <!-- User Email -->
            <div id="infoUserEmail" style="color: gray; font-size: 0.9rem; word-wrap: break-word;">
                <span id="defaultEmail">No Email</span>
            </div>

            <!-- ChatHub Info / Tips -->
            <div id="chatHubInfo" style="color: #555; font-size: 0.85rem; margin-top: 15px; text-align: left;">
                <p>💬 Welcome to ChatHub!</p>
                <p>Here you can:</p>
                <ul style="padding-left: 18px; margin: 5px 0;">
                    <li>View your recent chats</li>
                    <li>Send and receive messages instantly</li>
                    <li>Search for users to start a conversation</li>
                </ul>
                <p style="margin-top: 10px; font-size: 0.8rem; color: gray;">Select a chat to see details and start messaging.</p>
            </div>
        </div>

        <!-- No User Selected -->
        <div id="noUserSelected" style="color: gray; margin-top: 40px;">
            Select a user to see details
        </div>

    </div>

</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script src="~/js/Messages.js"></script>
    <script src="~/js/Common.js"></script>
    <script src="~/js/Login.js"></script>
}
